$desk: 1240px;
$phone: 641px;
$lap: 1008px;

@function strip-unit($value) {
  @return $value / ($value * 0 + 1);
}

@function em($target, $ctx: 14px) {
  @if $target == 0 {
    @return 0;
  }
  @return $target / $ctx + 0em;
}

@mixin make-fluid-type($min-vw, $max-vw, $min-font-size, $max-font-size) {
  $u1: unit($min-vw);
  $u2: unit($max-vw);
  $u3: unit($min-font-size);
  $u4: unit($max-font-size);

  @if $u1 == $u2 and $u1 == $u3 and $u1 == $u4 {
    & {
      font-size: calc( #{em($min-font-size)} + (#{strip-unit(em($max-font-size - $min-font-size))}) * (100vw - #{em($min-vw)}) / (#{strip-unit(em($max-vw - $min-vw))}) );
    }
  }
}

